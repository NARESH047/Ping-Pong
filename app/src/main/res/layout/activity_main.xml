<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity"
android:orientation="vertical"
android:background="@drawable/app_background_stars">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#222222">
        <ImageView
            android:id="@+id/Icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/app_icon_circle_cropped" />

        <TextView
            android:id="@+id/custom_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ping Pong"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingLeft="8dp"
            />

    </androidx.appcompat.widget.Toolbar>

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/audioImage"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/audio_on"
        android:layout_gravity="center"
        android:onClick="audioPref" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <ImageButton
        android:id="@+id/exit"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/exit"
        android:layout_gravity="center"
        android:onClick="exit" />

</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="1">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center">
        <ImageButton
            android:id="@+id/easy_game"
            android:src="@drawable/easy_game"
            style="@style/CategoryStyle"
            android:layout_gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:onClick="easyGame" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center">
        <ImageButton
            android:id="@+id/medium_game"
            android:src="@drawable/medium_game"
            style="@style/CategoryStyle"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:onClick="mediumGame"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center">
        <ImageButton
            android:id="@+id/hard"
            android:src="@drawable/hard_game"
            style="@style/CategoryStyle"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:onClick="hardGame"/>
    </FrameLayout>

</LinearLayout>


<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="254dp"
    android:layout_gravity="center"
    app:cardElevation="10dp"
    app:cardBackgroundColor="@color/white"
    app:cardMaxElevation="12dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game play"
            android:textSize="24dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" + On and off sound by pressing on the audio icon. \n + Enter the game by choosing difficulty level. \n + Control the bat with touch motion below it. \n + You got 5 lives and bar at the top right indicate the current remaining. \n + Your score is diplayed on top of screen. \n + Press exit icon to exit. \n + Press restart icon to restart the game."
            android:textSize="16dp"
            />

    </LinearLayout>


</androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#006994"
            android:layout_marginBottom="8dp"
            android:text="Made with "/>
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@color/black"
            android:src="@drawable/pixelated_heart"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#006994"
            android:layout_marginBottom="8dp"
            android:text=" from Naresh :)"/>

    </LinearLayout>
</LinearLayout>

